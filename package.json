{
  "name": "arcfusion",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "b:p": "cd packages/client && rm -rf .turbo dist tsconfig.tsbuildinfo && pnpm build && cd ../store && rm -rf .turbo dist tsconfig.tsbuildinfo && pnpm build && cd ../ui && rm -rf .turbo dist tsconfig.tsbuildinfo && pnpm build",
    "b:ui": "pnpm build --filter=@arcfusion/ui",
    "b:store": "pnpm build --filter=@arcfusion/store",
    "b:types": "pnpm build --filter=@arcfusion/types",
    "b:client": "pnpm build --filter=@arcfusion/client",
    "d:knowesis": "turbo run dev --filter={hosts/knowesis}...",
    "dev:all": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "rm -rf node_modules .turbo hosts/*/dist remotes/*/dist packages/*/dist"
  },
  "overrides": {
    "@babel/preset-typescript": "7.27.1"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^13.0.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
